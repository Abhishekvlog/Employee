<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="360sp"
            android:layout_height="450sp"
            android:layout_marginStart="20sp"

            android:layout_marginTop="260sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Employee"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="160sp"
            android:layout_marginStart="60sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="22sp"
            android:layout_marginTop="280sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="60sp"/>
        <TextView
            style="@style/employeedetail"
            android:layout_marginTop="340sp"
            android:layout_marginStart="30sp"
            android:text="First Name"/>

        <TextView
            style="@style/employeedetail"
            android:layout_marginTop="395sp"
            android:layout_marginStart="30sp"
            android:text="Last Name"/>
        <TextView
            style="@style/employeedetail"
            android:layout_marginTop="455sp"
            android:layout_marginStart="30sp"
            android:text="Working Email"/>
        <EditText
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:hint="@string/joanthan"
            android:layout_marginTop="330sp"
            android:layout_marginStart="210sp"/>
        <EditText
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:hint="@string/doe"
            android:layout_marginTop="385sp"
            android:layout_marginStart="210sp"/>
        <EditText
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_marginTop="440sp"
            android:layout_marginStart="210sp"/>






    </RelativeLayout>


</ScrollView>